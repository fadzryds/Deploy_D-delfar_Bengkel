FROM php:8.4-apache

# Install dependencies and PHP extensions
RUN apt-get update && apt-get install -y \
    git \
    unzip \
    libzip-dev \
    libicu-dev \
    zip \
    curl \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    && docker-php-ext-install \
        intl \
        zip \
        pdo \
        pdo_mysql \
    && a2enmod rewrite \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /var/www/html

COPY --from=composer:2 /usr/bin/composer /usr/bin/composer
COPY . .

RUN composer install --no-dev --optimize-autoloader

RUN chown -R www-data:www-data storage bootstrap/cache

# Modifikasi konfigurasi Apache untuk Laravel Public Directory
RUN sed -i 's|/var/www/html|/var/www/html/public|g' /etc/apache2/sites-available/000-default.conf

# --- Bagian Baru Penting untuk Railway ---

# 1. Pastikan Apache mendengarkan variabel lingkungan $PORT
# Ini menggantikan port 80 default dengan nilai dinamis dari Railway
RUN echo "Listen \${PORT}" >> /etc/apache2/ports.conf

# 2. Tetapkan variabel lingkungan PORT default jika tidak ada (opsional, untuk testing lokal)
ENV PORT 8000
EXPOSE 8000